<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    tools:context=".FloatingActivity">

    <TextView
        android:id="@+id/tv_popName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Love yourself"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--// 닫기 버튼 -->

    <Button
        android:id="@+id/btn_back"
        android:layout_width="77dp"
        android:layout_height="57dp"
        android:background="#FFC400"
        android:gravity="center"
        android:padding="16dp"
        android:text="BACK"
        android:textColor="#777A6A"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.864"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_popName"
        app:layout_constraintVertical_bias="0.031" />

    <TableLayout
        android:id="@+id/table_grade"
        android:layout_width="323dp"
        android:layout_height="313dp"
        android:layout_marginTop="20dp"
        android:background="#FFC400"
        android:backgroundTint="@color/colorSub"
        android:stretchColumns="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#2979FF">

            <TextView
                android:id="@+id/title_SongNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:background="#FFC400"
                android:gravity="center"
                android:text="NO."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_hint"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:background="#FFC400"
                android:gravity="center"
                android:text="HINT"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_span="0"
                android:background="#FFC400"
                android:gravity="center"
                android:text="LYRICS"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="318dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:text="테이블 소개란 "
        app:layout_constraintStart_toStartOf="@id/table_grade"
        app:layout_constraintTop_toBottomOf="@id/table_grade" />
    <!-- 닫기 버튼 -->


</androidx.constraintlayout.widget.ConstraintLayout>