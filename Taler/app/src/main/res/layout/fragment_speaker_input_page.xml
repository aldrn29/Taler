<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7EDE0">


    <Button
        android:id="@+id/btn_speak"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginBottom="300dp"
        android:text="speak"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_user_speaking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/tv_user_speaking"
        android:layout_width="329dp"
        android:layout_height="201dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:text="TextView"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_speak"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ACCESS KEY"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_speak"
        app:layout_constraintLeft_toRightOf="@id/btn_speak"
        app:layout_constraintRight_toRightOf="@id/tv_user_speaking" />

</androidx.constraintlayout.widget.ConstraintLayout>